@model List<CKK.Logic.Models.Product>

@{
    ViewData["Title"] = "Products";
}
<form asp-action="Add" enctype="multipart/form-data"  method="post">
    <h1>Details</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quanity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Price
                    </td>
                    <td>
                        @item.Quantity
                    </td>
                    <td>
                        <a asp-action="Details" class="btn btn-primary" asp-route-id ="@item.Id">Select </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
